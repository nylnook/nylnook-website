    <a class="gumroad-button" href="<%= @document.productlink %>"><%= @_ 'download-gumroad' %></a>
  <% end %>
  <% if @document.productpaperlink? : %>
    <a class="gumroad-button" href="<%= @document.productpaperlink %>"><%= @_ 'buy-paper-gumroad' %></a>
  <% end %>
</div>
</section>

