		<noscript>
		    <img src="<%- @document.basename %>/thumb-nylnook-<%- @document.basename %>-700x700.jpg" alt="<%- @document.title %>" />
		</noscript>
	</picture>
	<section>
		<h1><%- @document.title %></h1>
		<time pubdate="<%- @document.computerDate %>"><%- @document.humanDate %></time>
		<%- @content %>
	</section>
	<section>
		<h2>Download for your screen size</h2>
		<p>Note : definition is given "width x height"</p>
		
		<% deflist = "" %>
		<% toolongname = "nylnook-"+@document.basename+"-" %>
		<% for file in @getDocument().getAssociatedFiles().toJSON(): %>
			<% if !(/thumb/.test(file.basename)) : %>
				<% definition = file.basename.replace(toolongname, ''); %>
				<% deflist += definition + ", " %>
			<% end %>
		<% end %>
		
		<% downloadpath = @document.basename+"/files/nylnook-"+@document.basename+"-" %>
		<% extpath = ".jpg" %>
		<% unit = "px" %>
		
		<% img = (def, note) -> %>
			<% deftest = new RegExp(def) %>
			<% if (deftest.test(deflist)) : %>
				<% if (note?) : %>
			 		<a href="<%- downloadpath %><%- def %><%- extpath %>" download><%- def %><%- unit %> (<%- note %>)</a>
			 	<% else : %>
			 		<a href="<%- downloadpath %><%- def %><%- extpath %>" download><%- def %><%- unit %></a>
			 	<% end %>
			 <% end %>
		<% end %>
		
		
