<%- @partial('header') %>

	<section id="intro">
		<h1 class="page-title"><%- @document.title %></h1>
		<%- @content %>
	</section>

	<% for post in @getPageCollection('blog_'+ @document.lang).toJSON().slice(0,1): %>
	<article class="post single-post">
		<h1><a href="<%= post.url %>"><%- post.title %></a></h1>
		<time pubdate="<%- @computerDate(post.date) %>"><%- @date(post.date, post.lang) %></time>
		<p class="author"><%= @_ 'by' %> <a href="/<%- @document.lang %>/<%= @_ 'about-filename' %>"><%- @site.author %></a></p>
		<%- post.contentRenderedWithoutLayouts %> <a href="<%= post.url %>">[...]</a>
	</article>
	<% end %>

	<% for post in @getPageCollection('blog_'+ @document.lang).toJSON().slice(1,99): %>
	  <article class="post small-blocks">
	  	<div class="inside">
		    <h2><a href="<%= post.url %>"><%- post.title %></a></h2>
		   <time pubdate="<%- @computerDate(post.date) %>"><%- @date(post.date, post.lang) %></time>
		       <%- post.contentRenderedWithoutLayouts %> <a href="<%= post.url %>">[...]</a>
		 </div>
		</article>
	<% end %>

<div class="page-bottom">
	<!-- Page Listing -->
	<% if @document.page: %>
	<nav class="prevnextnav">
		<% if @hasPrevPage(): %>
		    <a class="previous" href="<%= @getPrevPage() %>"><img src="/website-img/icon-previous.svg" alt="" /><%= @_ 'newer' %></a>
		<% end %>
		‚ùÑ
		<% if @hasNextPage(): %>
		    <a class="next" href="<%= @getNextPage() %>"><%= @_ 'older' %><img src="/website-img/icon-next.svg" alt="" /></a>
		<% end %>
	</nav>
	<% end %>
</div>

<%- @partial('footer') %>
